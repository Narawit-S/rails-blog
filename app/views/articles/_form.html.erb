<%= form_with model: article do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% article.errors.full_messages_for(:title).each do |message| %>
            <p><%= message %></p>
        <% end %>
    <div>
    <div>
        <%= form.label :body %><br>
        <%= form.text_area   :body %>
        <% article.errors.full_messages_for(:body).each do |message| %>
            <p><%= message %></p>
        <% end %>
    <div>
    <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['published', 'privated', 'archived'], selected: 'published' %>
        <% article.errors.full_messages_for(:status).each do |message| %>
            <p><%= message %></p>
        <% end %>
    <div>
    <br>
    <div>
        <%= form.submit %>
    </div>
<% end %>
