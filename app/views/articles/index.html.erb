<h1>Articles</h1>

<p><%= Article.public_count%> published blog</p>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
        <div>
          <%= link_to "edit", edit_article_path(article) %>
        </div>
      </li>
    <% end %>
  <% end %>
  <br>
  <button>
    <%= link_to "New article", new_article_path %>
  </button>
  
</ul>

